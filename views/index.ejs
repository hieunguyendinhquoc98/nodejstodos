<html ng-app="app.todos">
    <head>
        <title>Node/Angular Todos</title>
        <!--LOAD CDN STYLES-->
        <link rel= "stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
        <link rel= "stylesheet" href = "https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
        <link rel= "stylesheet" href = "https://cdnjs.cloudflare.com/ajax/libs/angular-xeditable/0.10.1/css/xeditable.min.css">
        <!--CDN SCRIPTS-->
        <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.7.9/angular.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/angular-xeditable/0.10.1/js/xeditable.min.js"></script>        
        <!--CDN STYLE-->
        <link rel="stylesheet" href ="assets/css/style.css">

        <!--load app anglular-->
        <script src="assets/js/main/app.js"></script>
        <script src="assets/js/main/services/svTodos.js"></script>
    </head>

    <body ng-controller= "todoController">
        <div class="container">

                <div class="jumbotron text-center">
                    <h1 class="display-4">{{appName}} <span class = "label label-info">{{todos.length}}</span></h1>
                </div>

                <div id="todo-list" class="row">
                    <div class="col-sm-6 col-sm-offset-3">
                        <div class="checkbox" ng-repeat="todo in todos">
                            <input type="checkbox" ng-model="todo.isDone" ng-change="updateTodo(todo)">
                            <a href ng-click="deleteTodo(todo)"><i class="fa fa-remove"></i></a>
                            <a href ng-click="textBtnForm.$show()" ng-hide="textBtnForm.$visible"><i class="fa fa-edit"></i></a>
                            <span ng-class="{strike: todo.isDone}" editable-text="todo.text" e-form="textBtnForm" onaftersave="updateTodo(todo)">{{todo.text}}</span>
                        </div>
                        <p class="text-center" ng-show="loading">
                            <span class="fa fa-spinner fa-spin fa-3x">

                            </span>
                        </p>
                    </div>    
                </div>

                <div id= "todo-form" class = "row text-center">
                    <div class="col-sm-8 col-sm-offset-2 text-center">
                        <form>
                            <div class="form-group">
                                <input type = "text" ng-model="formData.text" class="form-control input-lg text-center" placeholder="Hi,there!">
                            </div>
                            
                            <button type="submit" class="btn btn-primary btn-lg" ng-disabled="!formData.text"ng-click="createTodo()">
                                Add
                            </button>
                        </form>
                    </div>
                </div>
        </div>
    </body>
</html>